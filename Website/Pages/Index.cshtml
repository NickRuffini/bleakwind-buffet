@page
@model IndexModel
@{
	ViewData["Title"] = "Home page";
}

<!-- Title of the page and lists some extra info -->
<div class="text-center">
	<h1>Welcome to Bleakwind Buffet!</h1>
	<p>
		We at Bleakwind Buffet are proud to bring you authentic fantasy meals straight from the world of Skyrim.
		Shake the blood off your sword and sake your thirst with one of our old-fashioned sailor sodas. Hack into a
		Smokehouse Skeleton with your dagger. Or vanquish the the mighty Thalmor Triple Burger! You’ve had a hard
		adventure and earned your loot, so spend it with us!
	</p>
</div>

<h2>
	Entrees
</h2>
<div class="grid-container">
	<!-- Adds the grid elements for our entrees -->
	<div class="grid-item">
		@foreach (BleakwindBuffet.Data.Generic.IOrderItem item in BleakwindBuffet.Data.Generic.Menu.Entrees())
		{
			<div class="menu-item">
				<h3>
					@item.ToString()
				</h3>
				<div>
					$@item.Price
				</div>
				<div>
					@item.Calories calories
				</div>
			</div>
		}
	</div>
</div>

<h2>
	Sides
</h2>
<div class="grid-container">
	<!-- Adds the grid elements for our small sides -->
	<div class="grid-item">
		@for (int i = 0; i < 4; i++)
		{
			List<BleakwindBuffet.Data.Generic.IOrderItem> list = BleakwindBuffet.Data.Generic.Menu.Sides() as List<BleakwindBuffet.Data.Generic.IOrderItem>;
