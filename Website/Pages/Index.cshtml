			BleakwindBuffet.Data.Generic.IOrderItem item = list[i];
			<div class="menu-item">
				<h3>
					@item.ToString()
				</h3>
				<div>
					$@item.Price
				</div>
				<div>
					@item.Calories calories
				</div>
			</div>
		}
	</div>
</div>

